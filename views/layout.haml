!!! 5
%html
  %head
    %title Product Advertising API用リバースプロキシ
    %meta{:"http-equiv"=>"Content-Type", :content=>"text/html", :charset=>"utf-8"}
    %link{"rel" => "stylesheet", "href" => "/css/rpaproxy.css", "type" => "text/css", "media" => "all"}
    %link{"rel" => "stylesheet", "href" => "/css/smoothness/jquery-ui-1.8.16.custom.css", "type" => "text/css", "media" => "all"}
    %script{src: 'http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js'}
    %script{src: '/js/rpaproxy.js'}
  %body
    #header-outer
      %a{href: 'https://github.com/machu/rpaproxy-sinatra'}
        %img{style: 'position: absolute; top: 0; left: 0; border: 0;', src: "https://a248.e.akamai.net/assets.github.com/img/bec6c51521dcc8148146135149fe06a9cc737577/687474703a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f6c6566745f6461726b626c75655f3132313632312e706e67", alt: "Fork me on GitHub"}
      #header
        -if current_user
          = "welcome #{current_user.name}"

        %a{href: '/'} トップページ
        %a{href: '/proxies'} プロキシ一覧

        -if current_user
          %a{href: '/profile'} 設定
          %a{href: '/logout'} ログアウト
        -else
          %a{href: '/auth/twitter'}
            %img{src: 'sign-in-with-twitter-l.png', alt: 'Twitterでログイン'}

    #content-outer
  
      %h1
        Product Advertising API用リバースプロキシ
    
      -if flash.has?(:error)
        .error=flash[:error]
  
      -if flash.has?(:notice)
        .notice=flash[:notice]
  
      != yield
  
    #footer-outer
      #footer
        Presented by
        %a{href: 'http://twitter.com/machu'} @machu
