%h2 stats

-for stat in @stats
  %h3= stat.locale

  %table{cellpadding: '0', cellspacing: '0'}
    %tbody
      %tr
        %th associate_tag
        %th count
        %th ratio
      -for atag_report in stat.atag_reports
        %tr
          %td= atag_report.atag
          %td= atag_report.count
          %td= sprintf("%.1f", atag_report.ratio)

